{
  "publisher": "amburgao",
  "name": "explorer-utils",
  "displayName": "Explorer Utils",
  "version": "0.3.1",
  "description": "add some extra actions for explorer context menu and status bar.",
  "repository": "https://github.com/amburgao/explorer-utils.git",
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": [{
      "title": "Explorer Utils",
      "properties": {
        "explorerUtils.garbageList": {
          "type": "array",
          "examples": [
            [
              "node_modules"
            ]
          ],
          "description": "List of files and folder to be excluded.\n- Globs (ie. \"*.map\") are accepted just for files.\n- For directories, relative path must be used (ie. \"node_modules\")."
        }
      }
    }],
    "commands": [{
        "title": "Add to .gitignore",
        "command": "explorer-utils.add-to-gitignore"
      },
      {
        "title": "Toggle .gitignore",
        "command": "explorer-utils.toggle-gitignore"
      },
      {
        "title": "Hide file/folder",
        "command": "explorer-utils.hide-file-folder"
      },
      {
        "title": "Toggle hidden files",
        "command": "explorer-utils.toggle-hidden-files"
      },
      {
        "title": "Clear workspace garbage",
        "command": "explorer-utils.clear-garbage"
      }
    ],
    "menus": {
      "explorer/context": [{
          "command": "explorer-utils.add-to-gitignore",
          "title": "Add to .gitignore",
          "when": "explorerViewletFocus",
          "group": "!explorer-utils"
        },
        {
          "command": "explorer-utils.toggle-gitignore",
          "title": "Toggle .gitignore",
          "when": "explorerViewletFocus",
          "group": "!explorer-utils"
        },
        {
          "title": "Hide file/holder",
          "command": "explorer-utils.hide-file-folder",
          "when": "explorerViewletFocus",
          "group": "!!explorer-utils"
        },
        {
          "title": "Toggle hidden files",
          "command": "explorer-utils.toggle-hidden-files",
          "when": "explorerViewletFocus",
          "group": "!!explorer-utils"
        },
        {
          "title": "Clear workspace garbage",
          "command": "explorer-utils.clear-garbage",
          "when": "explorerViewletFocus",
          "group": "!!explorer-utils"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run lint && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "lint:fix": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" --fix && eslint --fix src",
    "clean": "rm -rf build/* out/* *.vsix",
    "build": "mkdir -p build && vsce package -o build/",
    "publish": "vsce publish",
    "version": "npm run build && git add -A build",
    "postversion": "git push && git push --tags && rm -rf build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/node": "^24.6.2",
    "@types/vscode": "^1.104.0",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3"
  }
}