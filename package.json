{
  "name": "explorer-utils",
  "displayName": "Explorer Utils",
  "description": "add some extra actions for explorer context menu and status bar.",
  "version": "0.0.1",
  "icon": "media/logo.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Explorer Utils",
        "properties": {
          "explorerUtils.garbageList": {
            "type": "array",
            "examples": [
              [
                "node_modules"
              ]
            ],
            "description": "List of files to be excluded on Clean Garbage command."
          }
        }
      }
    ],
    "commands": [
      {
        "title": "Add to .gitignore",
        "command": "explorer-utils.add-to-gitignore"
      },
      {
        "title": "Toggle .gitignore",
        "command": "explorer-utils.toggle-gitignore"
      },
      {
        "title": "Hide file/folder",
        "command": "explorer-utils.hide-file-folder"
      },
      {
        "title": "Toggle hidden files",
        "command": "explorer-utils.toggle-hidden-files"
      },
      {
        "title": "Clear workspace garbage",
        "command": "explorer-utils.clear-garbage"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "explorer-utils.add-to-gitignore",
          "title": "Add to .gitignore",
          "when": "explorerViewletFocus",
          "group": "!explorer-utils"
        },
        {
          "command": "explorer-utils.toggle-gitignore",
          "title": "Toggle .gitignore",
          "when": "explorerViewletFocus",
          "group": "!explorer-utils"
        },
        {
          "title": "Hide file/holder",
          "command": "explorer-utils.hide-file-folder",
          "when": "explorerViewletFocus",
          "group": "!!explorer-utils"
        },
        {
          "title": "Toggle hidden files",
          "command": "explorer-utils.toggle-hidden-files",
          "when": "explorerViewletFocus",
          "group": "!!explorer-utils"
        },
        {
          "title": "Clear workspace garbage",
          "command": "explorer-utils.clear-garbage",
          "when": "explorerViewletFocus",
          "group": "!!explorer-utils"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": "https://github.com/amburgao/explorer-utils.git"
}